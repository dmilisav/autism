<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/header_border_shadow"
    android:orientation="vertical"
    tools:context=".HomeScreenActivity" >
 
    <TextView
        android:id="@+id/ViewTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Vacuuming"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:background="#a60000"
        android:textColor="#ffffff"
        android:layout_marginBottom="10sp"
        />
 
    <TextView
        android:id="@+id/TruncatedText"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/header_border"
        android:padding="@dimen/TruncatedPadding"
        android:text="Vacuum the floor today! Get the stuff from the closet and make sure to get the corners!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="22dp" />
 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
 
     <HorizontalScrollView
        android:id="@+id/HorizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/footer_border"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="@dimen/ImagePadding" >
              
             <TextView
                 android:layout_width="140dp"
                 android:layout_height="140dp"
                 android:layout_gravity="center"
                 android:layout_marginRight="@dimen/ImagePadding"
                 android:padding="@dimen/pad"
                 android:paddingTop="@dimen/pad"
                 android:text="Follow these step to vaccum"
                 android:textSize="@dimen/size2" />
              
             <ImageView
                 android:layout_width="140dp"
                 android:layout_height="140dp"
                 android:layout_marginRight="@dimen/ImagePadding"
                 android:src="@drawable/vacuum2" />
              
             <ImageView
                  
                 android:layout_width="140dp"
                 android:layout_height="140dp"
                 android:src="@drawable/vacuum1" />
 
        </LinearLayout>
    </HorizontalScrollView>
 
    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
 
    <HorizontalScrollView
        android:id="@+id/HorizontalScrollView01"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/footer_border"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="@dimen/ImagePadding" >
              
             <ImageView
                 android:id="@+id/contact1"
                 android:layout_width="140dp"
                 android:layout_height="140dp"
                 android:src="@drawable/marc" />
              
             <ImageView
                 android:id="@+id/contact2"
                 android:layout_width="140dp"
                 android:layout_height="140dp"
                 android:src="@drawable/rahul" />
              
             <ImageView
                 android:id="@+id/contact3"
                 android:layout_width="140dp"
                 android:layout_height="140dp"
                 android:src="@drawable/raymond" />
 
        </LinearLayout>
    </HorizontalScrollView>
 
</LinearLayout>