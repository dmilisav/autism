<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/black"
	    android:orientation="vertical" >
	    
		<ImageView 
	       android:visibility="visible"
	       android:layout_width="fill_parent"
           android:layout_height="0dip"
	       android:layout_weight="90"
	       android:id="@+id/imageView1" />
	  
	    <LinearLayout 

			android:id="@+id/completionButtons" android:orientation="horizontal"
			android:layout_width="fill_parent" 	
        	android:layout_height="0dip"
        	android:layout_weight="10"
			android:gravity="center|bottom" android:layout_marginBottom="25dip">
	
			<Button
			    android:id="@+id/bSwitchActivity"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:background="@android:drawable/btn_default"
			    android:text="Done taking pictures" />
		
			<Button
			    android:id="@+id/TakeMorePictures"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:background="@android:drawable/btn_default"
			    android:text="Take more pictures" />
			
		</LinearLayout>
	</LinearLayout>
	