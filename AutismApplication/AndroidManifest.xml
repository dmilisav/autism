<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autismapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
   <uses-feature android:name="android.hardware.camera" android:required="false" />
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   <uses-permission android:name="android.permission.RECORD_AUDIO" />
   <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
   <uses-permission android:name="android.permission.READ_CONTACTS"/>
   <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.autismapplication.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.autismapplication.HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEWTASK" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.autismapplication.ViewTaskScreen.ViewTask"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.autismapplication.ViewTaskScreen.ViewNoteScreen"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.autismapplication.ViewTaskScreen.ViewPicturesScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.autismapplication.SingleTaskActivity"
            android:label="@string/title_activity_single_task" >
        </activity>
        <activity
            android:name="com.autismapplication.AllTasksDetailedViewActivity"
            android:label="@string/title_activity_all_tasks_detailed_view" >
        </activity>
        <activity
            android:name="com.autismapplication.AllTasksCollapsableViewActivity"
            android:label="@string/title_activity_all_tasks_collapsable_view" >
        </activity>
        <activity 
            android:name="com.autismapplication.NewNoteActivity" 
            android:label="New note">
        </activity>
        <activity 
            android:name="com.autismapplication.PictureActivity" 
            android:label="New Picture">
        </activity>
        <activity 
            android:name="com.autismapplication.VideoActivity" 
            android:label="New Video">
        </activity>
    </application>

</manifest>